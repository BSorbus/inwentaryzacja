<div id="tab_archives">
  <fieldset class="my-fieldset">
    <legend class="my-fieldset colored-title"><%= subtitle %>&nbsp;&nbsp;-&nbsp;&nbsp;<%= archive_index_legend %></legend>

    <div class="row">
      <div class="col-sm-12">
        <table id="group-archives-table" class="hover cell-border compact" width="100%" 
          data-source="<%= datatables_index_group_archives_path(group_id: @group.id, format: :json) %>"
          data-locale_url="<%= datatables_lang_path(format: :json) %>">
          <thead>
            <tr>
              <th>ID</th>
              <th><%= Archive.human_attribute_name(:name) %></th>
              <th><%= Archive.human_attribute_name(:expiry_on) %></th>
              <th><%= Archive.human_attribute_name(:note) %></th>
              <th><%= t('table_group_archivization') %></th>
            </tr>
          </thead>
          <tbody>
             <!--data from JSON -->
          </tbody>
        </table>
      </div> <!--/col-sm-12 -->
    </div> <!--/row -->

  </fieldset>
</div>